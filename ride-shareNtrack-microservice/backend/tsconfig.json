{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "CommonJS",
      "target": "ES6",
      "moduleResolution": "Node",
      "baseUrl": "./",
      "paths": {
        "@infra/*": ["infra/*"],  // Optional alias
        "@services/*": ["src/services/*"]
      }
    },
    "include": ["src", "infra"],  // Add infra directory here
    "exclude": ["node_modules"],
    "strictFunctionTypes": false
  }
  